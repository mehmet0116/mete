<?xml version="1.0" encoding="utf-8"?>
<full-backup-content xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Include shared preferences -->
    <include domain="sharedpref" path="."/>
    
    <!-- Include database -->
    <include domain="database" path="."/>
    
    <!-- Include files in internal storage -->
    <include domain="file" path="."/>
    
    <!-- Exclude cache and temp files -->
    <exclude domain="database" path="cache"/>
    <exclude domain="file" path="cache"/>
    <exclude domain="file" path="temp"/>
    
    <!-- Exclude sensitive data that shouldn't be backed up -->
    <exclude domain="sharedpref" path="sensitive_prefs.xml"/>
</full-backup-content>