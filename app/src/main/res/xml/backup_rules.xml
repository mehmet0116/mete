<?xml version="1.0" encoding="utf-8"?><!--
   Sample backup rules file; uncomment and customize as necessary.
   See https://developer.android.com/guide/topics/data/autobackup
   for details.
   Note: This file is ignored for devices older than API 31
   See https://developer.android.com/about/versions/12/backup-restore
-->
<full-backup-content>
    <!--
   <include domain="sharedpref" path="."/>
   <exclude domain="sharedpref" path="device.xml"/>
-->
   
   <!-- Include Room database -->
   <include domain="database" path="mete_database.db"/>
   
   <!-- Include DataStore preferences -->
   <include domain="file" path="datastore/"/>
   
   <!-- Exclude cache files -->
   <exclude domain="file" path="cache/"/>
   <exclude domain="external" path="Android/data/com.metegelistirme/cache"/>
   
   <!-- Exclude temporary files -->
   <exclude domain="file" path="tmp/"/>
   
   <!-- Include app-specific directories -->
   <include domain="file" path="user_data/"/>
   
   <!-- Exclude sensitive information -->
   <exclude domain="database" path="sensitive.db"/>
   <exclude domain="sharedpref" path="sensitive_prefs.xml"/>
</full-backup-content>