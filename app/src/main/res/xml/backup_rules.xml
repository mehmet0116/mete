<?xml version="1.0" encoding="utf-8"?>
<full-backup-content xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Room veritabanı hariç tut -->
    <exclude domain="database" path="mete_education_database"/>
    
    <!-- SharedPreferences hariç tut (DataStore kullanılıyor) -->
    <exclude domain="sharedpref" path="."/>
    
    <!-- Cache dosyaları hariç tut -->
    <exclude domain="cache" path="."/>
    
    <!-- Code cache hariç tut -->
    <exclude domain="codecache" path="."/>
    
    <!-- External files hariç tut -->
    <exclude domain="external" path="."/>
    
    <!-- Root dizin hariç tut -->
    <exclude domain="root" path="."/>
    
    <!-- File dosyaları hariç tut -->
    <exclude domain="file" path="."/>
    
    <!-- İzin verilenler -->
    <include domain="database" path="backup.db" requireFlags="clientSideEncryption"/>
    
    <!-- Asset dosyaları yedekle -->
    <include domain="asset" path="fonts/"/>
    <include domain="asset" path="sounds/"/>
    <include domain="asset" path="images/"/>
    
    <!-- Raw ses dosyaları yedekle -->
    <include domain="raw" path="welcome_sounds/"/>
    <include domain="raw" path="praise_sounds/"/>
    <include domain="raw" path="motivation_sounds/"/>
    <include domain="raw" path="question_sounds/"/>
    <include domain="raw" path="music/"/>
    <include domain="raw" path="effects/"/>
</full-backup-content>