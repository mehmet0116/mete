<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- TODO: Use <include> and <exclude> tags to control what is backed up.
        This folder is not required to be specified. When this file is absent, the entire
        app folder gets backed up to Google Drive, except for the cache folder.
        For more information, see https://developer.android.com/guide/topics/data/autobackup
        -->
        
        <!-- Include app data -->
        <include domain="file" path="user_data/"/>
        <include domain="database" path="mete_database.db"/>
        <include domain="sharedpref" path="app_preferences.xml"/>
        
        <!-- Exclude cache and temporary files -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="tmp/"/>
        <exclude domain="external" path="Android/data/com.metegelistirme/cache"/>
    </cloud-backup>
    
    <!--
    Rules for device transfer.
    This section defines what data gets copied from an old device to a new device.
    -->
    <device-transfer>
        <!-- Include the same data as cloud backup -->
        <include domain="file" path="user_data/"/>
        <include domain="database" path="mete_database.db"/>
        <include domain="sharedpref" path="app_preferences.xml"/>
        
        <!-- Exclude cache and temporary files -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="tmp/"/>
    </device-transfer>
</data-extraction-rules>