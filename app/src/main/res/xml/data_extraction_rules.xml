<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules xmlns:android="http://schemas.android.com/apk/res/android">
    <cloud-backup>
        <!-- Include app data to be backed up to cloud -->
        <include domain="sharedpref" path="user_preferences.xml"/>
        <include domain="database" path="app_database.db"/>
        <include domain="file" path="user_progress/"/>
        <include domain="file" path="achievements/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include app data to be transferred to new device -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
    </device-transfer>
</data-extraction-rules>