<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules xmlns:android="http://schemas.android.com/apk/res/android">
    <cloud-backup>
        <!-- Room veritabanı hariç tut -->
        <exclude domain="database" path="mete_education_database"/>
        
        <!-- SharedPreferences hariç tut -->
        <exclude domain="sharedpref" path="."/>
        
        <!-- Cache dosyaları hariç tut -->
        <exclude domain="cache" path="."/>
        
        <!-- Code cache hariç tut -->
        <exclude domain="codecache" path="."/>
        
        <!-- External files hariç tut -->
        <exclude domain="external" path="."/>
        
        <!-- Root dizin hariç tut -->
        <exclude domain="root" path="."/>
        
        <!-- File dosyaları hariç tut -->
        <exclude domain="file" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Tüm verileri transfer et -->
        <include domain="database" path="backup.db"/>
        <include domain="sharedpref" path="."/>
        <include domain="file" path="user_data/"/>
        <include domain="external" path="user_documents/"/>
    </device-transfer>
</data-extraction-rules>