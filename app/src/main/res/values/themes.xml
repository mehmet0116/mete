<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeteEgitimUygulamasi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/background_light</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_orange</item>
        <item name="colorSecondaryVariant">@color/primary_orange</item>
        <item name="colorOnSecondary">@color/background_light</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <!-- Material 3 specific -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.MeteEgitimUygulamasi</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.MeteEgitimUygulamasi.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MeteEgitimUygulamasi</item>
    </style>
    
    <!-- Theme overlay for Material 3 -->
    <style name="ThemeOverlay.MeteEgitimUygulamasi" parent="">
        <item name="colorSurface">@color/background_light</item>
        <item name="colorSurfaceVariant">@color/background_light_gray</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MeteEgitimUygulamasi.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MeteEgitimUygulamasi.Button.Outlined</item>
    </style>
    
    <!-- Custom Button Styles -->
    <style name="Widget.MeteEgitimUygulamasi.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kids_font</item>
    </style>
    
    <style name="Widget.MeteEgitimUygulamasi.Button.Outlined" parent="Widget.Material3.Button.Outlined">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kids_font</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.MeteEgitimUygulamasi.Card" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.MeteEgitimUygulamasi.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/kids_font_bold</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>
    
    <style name="TextAppearance.MeteEgitimUygulamasi.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/kids_font</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
    
    <style name="TextAppearance.MeteEgitimUygulamasi.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/kids_font</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>
    
    <!-- Dark theme variant -->
    <style name="Theme.MeteEgitimUygulamasi.Dark" parent="Theme.MeteEgitimUygulamasi">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorSurfaceVariant">@color/background_dark_gray</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
    </style>
</resources>