<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme -->
    <style name="Theme.MeteEgitimUygulamasi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        
        <!-- Typography -->
        <item name="android:fontFamily">@font/kids_font</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Mete.Headline.Large</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Mete.Headline.Medium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Mete.Headline.Small</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Mete.Button</item>
        <item name="android:textColor">@color/on_surface_light</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.MeteEgitimUygulamasi.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MeteEgitimUygulamasi</item>
    </style>
    
    <!-- Text appearances -->
    <style name="TextAppearance.Mete.Headline.Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/kids_font_bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>
    
    <style name="TextAppearance.Mete.Headline.Medium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/kids_font_bold</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>
    
    <style name="TextAppearance.Mete.Headline.Small" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/kids_font</item>
        <item name="android:textColor">@color/on_surface_light</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.Mete.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kids_font_bold</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.Mete.Card" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>