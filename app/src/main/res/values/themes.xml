<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeteEgitimUygulamasi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Typography -->
        <!-- TODO: Add kids_font to res/font/ directory -->
        <!-- <item name="android:fontFamily">@font/kids_font</item> -->
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MeteEgitimUygulamasi.Button</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.MeteEgitimUygulamasi.CardView</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.MeteEgitimUygulamasi.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MeteEgitimUygulamasi</item>
    </style>

    <!-- Button style -->
    <style name="Widget.MeteEgitimUygulamasi.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CardView style -->
    <style name="Widget.MeteEgitimUygulamasi.CardView" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Custom dialog theme -->
    <style name="Theme.MeteEgitimUygulamasi.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>