<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeteEgitimUygulamasi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Material 3 specific -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.MeteEgitimUygulamasi</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.MeteEgitimUygulamasi.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MeteEgitimUygulamasi</item>
    </style>

    <!-- Theme overlay for Material 3 -->
    <style name="ThemeOverlay.MeteEgitimUygulamasi" parent="">
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>
    </style>

    <!-- Compose theme -->
    <style name="Theme.MeteEgitimUygulamasi.Compose" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>